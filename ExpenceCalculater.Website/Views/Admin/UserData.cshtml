
@{
    ViewBag.Title = "UserData";
    Layout = "~/Views/_AdminMasterLayoutPage.cshtml";
}

    <div class="row">
        
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    <br><br>
                    <h2>User Input Form</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    User Name
                </div>
                <div class="col-lg-6" style="padding:2px">
                    <input id="userName" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    Password
                </div>
                <div class="col-lg-6" style="padding:2px">
                    <input id="password" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    Phone No
                </div>
                <div class="col-lg-6" style="padding:2px">
                    <input id="phoneNo" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    Email Id
                </div>
                <div class="col-lg-6" style="padding:2px">
                    <input id="email" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    DOB
                </div>
                <div class="col-lg-6" style="padding:2px">

                    <input type="date" id="dob">

                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    Gender
                </div>
                <div class="col-lg-6" style="padding:2px">

                    <div id="jqxGenderMale">Male</div>
                    <div id="jqxGenderFemale">Female</div>
                    <div id="jqxGenderOthers">Others</div>

                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <input type="button" class="btn btn-success pull-right" value="Add" id="userBtnAdd" />
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <br>
            <br>
            <br>
            <div id="userGrid"></div>
        </div>

    </div>
<script>
    $(document).ready(function () {
        var url = WebAPIURL + "api/UserData/GetAll";
        // prepare the data
       
        var source =
        {
            datatype: "json",
            datafields: [
                { name: 'UserId', type: 'int' },
                { name: 'UserName' },
                { name: 'Password' },
                { name: 'IsActive', type: 'bool' }
            ],
            id: 'Id',
            url: url,
            root: 'data'
        };
        var dataAdapter = new $.jqx.dataAdapter(source);

        $("#userGrid").jqxGrid(
            {
                width: '100%',
                source: dataAdapter,
                columnsresize: true,
                columns: [
                    { text: 'Id', dataField: 'UserId', width: 200},
                    { text: 'User Name', dataField: 'UserName', width: 200},
                    { text: 'Password', dataField: 'Password', width: 180},
                    { text: 'IsActive', dataField: 'IsActive'}
                ]
            });
    });

        $("#userBtnAdd").click(function () {

            var userName = $("#userName").val();
    var Password = $("#password").val();

    var postData = {
        "Name": userName,
        "Password": Password
    };

    $.ajax({
        type: "POST",
        url: WebAPIURL + 'api/UserData/Add',
        contentType: "application/json; charset=utf-8",
        data: JSON.stringify(postData),
        dataType: "json",
        success: function (msg) {

            alert(msg);
            window.location.reload();
        },
        error: function (req, status, error) {
            alert("Error try again");
        }
    });

        });

   

</script>
