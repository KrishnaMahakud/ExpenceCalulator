@model ExpenceCalculater.Data.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Login/LoginMasterLayoutPage.cshtml";
}

<div class="body"></div>
<div class="grad"></div>
<div class="header">
    <div><span><strong>Login</strong></span></div>
</div>
<br>
@using (Html.BeginForm("LoginValidate", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="login">
        <div>
            @*<input type="text" placeholder="username" name="user" id="txtUserName"><br>*@
            @Html.LabelFor(model => model.UserName)

            @Html.TextBoxFor(model => model.UserName, new { placeholder = "Enter UserName", @class = "input" })
            @Html.ValidationMessageFor(model => model.UserName)

        </div>

        <div>
            @*<input type="password" placeholder="password" name="password" id="txtPassword"><br>*@
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { placeholder = "Enter Password", @class = "input" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <input type="submit" value="Login" id="loginBtn" class="button" /><br>
        <h4 align="center"><a href="/Login/ResetPassword">Reset password</a></h4>
        @*<input type="button" value="Reset Password" id="btnResetPassword">*@
    </div>
}
